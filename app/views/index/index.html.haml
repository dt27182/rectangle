%index

#index_group

	#statement
		What's Trending Up

#webtiles
	- if not @websites.empty?
		%ul#grid
			- @websites.each do |website|
				%li
					.website_tile
						= link_to image_tag('placeholder.jpg', :size => '250x250'), show_website_path(website.id), :id => "#{website.name} image"
						= link_to "#{website.name}", website.url, :id => website.name
						= "(#{Category.find_by_id(Subcategory.find_by_id(website.subcategory_id).category_id).name})"
	- else
		%ul#grid
			%li
				.website_tile
					= link_to image_tag('shopping.png', :size =>'250x250'), show_category_path("shopping", "trending"), :id=>"shopping_img"
					= link_to "Buy Stuff", show_category_path("shopping", "trending"), :id=>"shopping"
			%li
				.website_tile
					= link_to image_tag('productivity.png', :size =>'250x250'), show_category_path("productivity", "trending"), :id=>"productivity_img"
					= link_to "Learn Stuff", show_category_path("productivity", "trending"), :id=>"productivity"
			%li
				.website_tile
					= link_to image_tag('entertainment.png', :size =>'250x250'), show_category_path("entertainment", "trending"), :id=>"entertainment_img"
					= link_to "Entertaining Stuff", show_category_path("entertainment", "trending"), :id=>"entertainment"
			%li
				.website_tile
					= link_to image_tag('misc.png', :size =>'250x250'), show_category_path("misc", "trending"), :id=>"misc_img"
					= link_to "Do Other Stuff", show_category_path("misc", "trending"), :id=>"misc"
		

