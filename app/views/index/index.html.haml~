	#statement
		%h2 What's Trending Up...

#webtiles
	- if not @websites.empty?
		%ul#grid
			- @websites.each do |website|
				%li
					.website_tile
						= link_to image_tag('placeholder.jpg', :size => '250x250'), show_website_path(website.id), :id => "#{website.name} image"
						#vote
							%upvote{:class => "upvote", :website_id => "#{website.id}"}
								= image_tag('arrow-up.png', :size => '30x30')
							%downvote{:class => "upvote", :website_id => "#{website.id}"}
								= image_tag('arrow-down.png', :size => '30x30')
						#tile_info
							= link_to "#{website.name}", website.url, :id => website.name
							= "(#{Category.find_by_id(Subcategory.find_by_id(website.subcategory_id).category_id).name})"
	- else
