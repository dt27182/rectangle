%profile
	#user_email
		= "#{@user.email}'s Homepage"

	#user_image
		= image_tag('placeholder.jpg', :size => '250x250')
		
	#user_votes
		%ul#dropdown
			%li#main
				= "Recent Votes"
				%ul
					- @votes.each do |vote|		
						- if vote.vote_type == 0
							%li
								#feed_arrow
									= image_tag('arrow-up.png', :size => '30x30')
								= link_to "#{Website.find_by_id(vote.website_id).name}", Website.find_by_id(vote.website_id).url
						- elsif vote.vote_type == 1
							%li
								#feed_arrow
									= image_tag('arrow-down.png', :size => '30x30')
								= link_to "#{Website.find_by_id(vote.website_id).name}", Website.find_by_id(vote.website_id).url

		

	#user_endorsements	
		#user_endorsement_statement
			= "Endorsed Websites"
		
		#user_endorsed_sites
			= render :partial => "/webtiles"
		
		

